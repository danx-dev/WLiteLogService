@model WLiteLogService.Models.DashboardViewModel
@{
//Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <title>Bootstrap Example</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <style>
        #custom-search-input{
            padding: 3px;
            border: solid 1px #E4E4E4;
            border-radius: 6px;
            background-color: #fff;
        }

        #custom-search-input input{
            border: 0;
            box-shadow: none;
        }

        #custom-search-input button{
            margin: 2px 0 0 0;
            background: none;
            box-shadow: none;
            border: 0;
            color: #666666;
            padding: 0 8px 0 10px;
            border-left: solid 1px #ccc;
        }

        #custom-search-input button:hover{
            border: 0;
            box-shadow: none;
            border-left: solid 1px #ccc;
        }

        #custom-search-input .glyphicon-search{
            font-size: 23px;
        }
    </style>
</head>
<body>

<div class="container-fluid">
    <br/>
    <div class="row">
        <div class="col-md-6">
            <div id="custom-search-input">
                <div class="input-group col-md-12">
                    <input type="text" class="form-control input-lg" placeholder="Search text..." id="search"/>
                    <span class="input-group-btn">
                        <button class="btn btn-info btn-lg" type="button">
                            <i class="glyphicon glyphicon-search"></i>
                        </button>
                    </span>
                </div>
            </div>
        </div>
    </div>
    <br/>
    <div class="row">
        <div class="col-sm-2">
            @foreach (var app in Model.ListOfApplications)
            {
                <div class="checkbox">
                    <label><input type="checkbox" value="">@app.Name</label>
                </div>
            }

        </div>
        <div class="col-sm-10">
            <div id="tabel">
                @Html.Partial("~/Views/Dashboard/_LogTable.cshtml", Model.ListOfLogEntryViewModels)
            </div>
        </div>
        
    </div>
</div>

</body>
<script type="text/javascript">
    function addRowHandlers() {
        var table = document.getElementById("logTabel");
        var rows = table.getElementsByTagName("tr");

        for (i = 0; i < rows.length; i++) {
            var currentRow = table.rows[i];
            currentRow.onclick = createClickHandler(currentRow);
        }
    }

    function createClickHandler(row) {

        return function () {
            var cell = row.getElementsByTagName("td")[0];
            var id = cell.innerHTML;
            alert("Message" + id);
        };

    }
    addRowHandlers();

    $( 'search' ).bind('keypress', function(e){
        if ( e.keyCode == 13 ) {
            alert("Searching...");
        }
    });
</script>
</html>
