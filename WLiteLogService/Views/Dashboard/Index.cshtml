
@{
    ViewBag.Title = "Dashboard";
}

<html>
<head>
    <meta charset="utf-8">
    <title>Layouts &raquo; Two-and-One</title>
    <meta name='viewport' content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no' />

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js" type="text/javascript"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.2.0/js/bootstrap.min.js" type="text/javascript"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/holder/2.3.2/holder.min.js" type="text/javascript"></script>
    <script>
        Holder.add_theme("white", { background:"#fff", foreground:"#a7a7a7", size:10 });
    </script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.2.2/Chart.bundle.min.js" ></script>
    
    <style>
    </style>
    
</head>
<body class="dashboard" style="padding-top: 80px;">

<div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
    <div class="container-fluid">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="../">
                <span class="glyphicon glyphicon-chevron-left"></span>
            </a>
            <a class="navbar-brand" href="./">Dashboard</a>
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav navbar-left">
            </ul>
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="row">

        <div class="col-sm-6">
            <div class="chart-wrapper">
                <div class="chart-title">
                    Errors (past 24 hours)
                </div>
                <div class="chart-stage">
                    <canvas id="Piecanvas"></canvas>
                </div>
                <div class="chart-notes">
                        
                </div>
            </div>
        </div>

        <div class="col-sm-6">
            <div class="chart-wrapper">
                <div class="chart-title">
                    Errors (past 5 days)
                </div>
                <div class="chart-stage">
                    <canvas id="Piecanvas2"></canvas>
                </div>
                <div class="chart-notes">
                        
                </div>
            </div>
        </div>

    </div>
    <div class="row">

        <div class="col-sm-12">
            <div class="chart-wrapper">
                <div class="chart-title">
                </div>
                <div class="chart-stage">
                    <div class="col-xs-6 col-md-4">
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="Search" id="txtSearch" onkeyup="search(event)"/>
                        </div>
                    </div>
                    <table class="table">
                        <thead>
                        <tr>
                            <th>Time</th>
                            <th>Application</th>
                            <th>Session</th>
                            <th>Message</th>
                        </tr>
                        </thead>
                        <tbody>
                        <tr>
                            <td>Default</td>
                            <td>Session</td>
                            <td>Defaultson</td>
                            <td>def@somemail.com</td>
                        </tr>
                        <tr class="success">
                            <td>Success</td>
                            <td>Session</td>
                            <td>Doe</td>
                            <td>john@example.com</td>
                        </tr>
                        <tr class="danger">
                            <td>Danger</td>
                            <td>Session</td>
                            <td>Moe</td>
                            <td>mary@example.com</td>
                        </tr>
                        <tr class="info">
                            <td>Info</td>
                            <td>Session</td>
                            <td>Dooley</td>
                            <td>july@example.com</td>
                        </tr>
                        <tr class="warning">
                            <td>Warning</td>
                            <td>Session</td>
                            <td>Refs</td>
                            <td>bo@example.com</td>
                        </tr>
                        <tr class="active">
                            <td>Active</td>
                            <td>Session</td>
                            <td>Activeson</td>
                            <td>act@example.com</td>
                        </tr>
                        </tbody>
                    </table>
                </div>
                <div class="chart-notes">
                        
                </div>
            </div>
        </div>

    </div>

</div>
<div class="container-fluid">
</div>
</body>
<script>

    function search(event) {
        if (event.keyCode === 13) {
            alert("Searching....");
        }
    }

    var PieChartData =  
    {  
        labels: ["Booking DK","T API","Status handler","S API","Updater"],  
        datasets: [{  
            label: 'Application Errors',  
            backgroundColor: [  
                "#f990a7",  
                "#aad2ed",  
                "#9966FF",  
                "#99e5e5",  
                "#f7bd83",  
            ],  
            borderWidth: 2,  
            data: [1,2,3,4,5]  
        }]  
    };  

    var PieChartData2 =
    {
            labels: ["Booking DK", "T API", "Status handler", "S API", "Updater"],
        datasets: [{
            label: 'Application Errors',
            backgroundColor: [
                "#f990a7",
                "#aad2ed",
                "#9966FF",
                "#99e5e5",
                "#f7bd83",
            ],
            borderWidth: 2,
            data: [20, 4, 11, 5, 5]
        }]
    };  
    window.onload = function () {  
        var ctx1 = document.getElementById("Piecanvas").getContext("2d");  
        window.myBar = new Chart(ctx1,  
            {  
                type: 'pie',  
                data: PieChartData,  
                options:  
                {  
                    title:  
                    {  
                        display: true,  
                        text: "Application Erros"  
                    },  
                    responsive: true,  
                    maintainAspectRatio: true  
                }  
            });
        var ctx2 = document.getElementById("Piecanvas2").getContext("2d");
        window.myBar = new Chart(ctx2,
            {
                type: 'pie',
                data: PieChartData2,
                options:
                {
                    title:
                    {
                        display: true,
                        text: "Application Erros"
                    },
                    responsive: true,
                    maintainAspectRatio: true
                }
            });
    }
</script>  
</html>

